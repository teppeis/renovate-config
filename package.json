{
  "name": "@teppeis/renovate-config",
  "description": "My shareable config for Renovate (renovateapp.com)",
  "version": "1.0.0",
  "author": "Teppei Sato <teppeis@gmail.com>",
  "files": [],
  "scripts": {
    "test": "node test/validate-config.js"
  },
  "devDependencies": {
    "renovate": "^11.37.19"
  },
  "homepage": "https://github.com/teppeis/renovate-config",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/teppeis/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/teppeis/renovate-config/issues"
  },
  "keywords": [
    "npm",
    "renovate"
  ],
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":noUnscheduledUpdates",
        ":separatePatchReleases",
        ":automergePatch",
        ":maintainLockFilesMonthly",
        ":prNotPending",
        ":preserveSemverRanges",
        ":unpublishSafe"
      ],
      "upgradeInRange": true,
      "prHourlyLimit": 0,
      "schedule": [
        "before 6am"
      ],
      "timezone": "Asia/Tokyo"
    },
    "always": {
      "extends": [
        "@teppeis"
      ],
      "schedule": []
    }
  }
}
